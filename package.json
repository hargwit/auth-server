{
    "name": "auth-server",
    "version": "1.0.2",
    "description": "An example auth server in node",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "format": "eslint . --ext .ts --fix && prettier 'src/**/*.{json,ts}' --write",
        "test-int": "jest --passWithNoTests int",
        "test-unit": "jest --passWithNoTests unit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hargwit/auth-server.git"
    },
    "keywords": [
        "auth",
        "node"
    ],
    "author": "harrygwithers@gmail.com",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/hargwit/auth-server/issues"
    },
    "homepage": "https://github.com/hargwit/auth-server#readme",
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@types/connect-redis": "0.0.17",
        "@types/express": "^4.17.12",
        "@types/express-session": "^1.17.4",
        "@types/faker": "^5.5.8",
        "@types/jest": "^26.0.23",
        "@types/redis": "^2.8.31",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "axios": "^0.21.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jsdoc": "^35.4.0",
        "eslint-plugin-prettier": "^3.4.0",
        "faker": "^5.5.3",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "npm test-unit"
        }
    },
    "lint-staged": {
        "**/*.{ts}": [
            "eslint --fix"
        ],
        "**/*.{json,ts}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "node_modules/",
            "dist/"
        ]
    },
    "dependencies": {
        "awilix": "^5.0.1",
        "connect-redis": "^6.0.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "morgan": "^1.10.0",
        "redis": "^3.1.2",
        "uuid": "^8.3.2"
    }
}
