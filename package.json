{
    "name": "auth-server",
    "version": "1.0.0",
    "description": "An example auth server in node",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "format": "eslint . --ext .ts --fix && prettier 'src/**/*.{json,ts}' --write",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hargwit/auth-server.git"
    },
    "keywords": [
        "auth",
        "node"
    ],
    "author": "harrygwithers@gmail.com",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/hargwit/auth-server/issues"
    },
    "homepage": "https://github.com/hargwit/auth-server#readme",
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jsdoc": "^35.4.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "npm test"
        }
    },
    "lint-staged": {
        "**/*.{js,ts}": [
            "eslint --fix"
        ],
        "**/*.{js,json,ts}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "node_modules/",
            "dist/"
        ]
    }
}
